{
  "name": "microfrontends-demo",
  "version": "1.0.0",
  "description": "ğŸ—ï¸ Proyecto completo de arquitectura de microfrontends con Vite Module Federation gestionado por Lerna",
  "private": true,
  "workspaces": [
    "shell",
    "header-mf",
    "products-mf",
    "cart-mf",
    "user-mf"
  ],
  "scripts": {
    "dev": "lerna run dev --parallel --scope='{shell,header-mf,products-mf,cart-mf,user-mf}'",
    "dev:shell": "lerna run dev --scope=shell",
    "dev:header": "lerna run dev --scope=header-mf",
    "dev:products": "lerna run dev --scope=products-mf",
    "dev:cart": "lerna run dev --scope=cart-mf",
    "dev:user": "lerna run dev --scope=user-mf",
    "build": "lerna run build --parallel",
    "build:shell": "lerna run build --scope=shell",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces",
    "clean": "lerna clean -y && lerna exec -- rm -rf dist",
    "start": "npm run dev",
    "stop": "lerna exec -- pkill -f 'vite.*dev'",
    "status": "lerna ls --all",
    "test": "lerna run test"
  },
  "keywords": [
    "microfrontends",
    "vite",
    "module-federation",
    "react",
    "lerna",
    "monorepo",
    "architecture",
    "enterprise"
  ],
  "author": "Nacho RS (@nachorsanz)",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "lerna": "^9.0.0"
  }
}
